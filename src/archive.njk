<h2>Archive</h2>

<ul class="post-archive">
  {% for post in collections.posts | reverse %}
    <li>
      <a href="{{ post.url }}">
        {{ post.data.title }}
      </a>
      {% if post.date %}
        <span class="archive-date">
          &#8226; {{ post.date | date("MMMM D, YYYY") }}
        </span>
      {% endif %}
    </li>
  {% endfor %}
</ul>
