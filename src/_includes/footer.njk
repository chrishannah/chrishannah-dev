<footer>
  <p>
    Subscribe via <a href="/feed.xml">RSS</a>.
  </p>
  <nav class="footer-social">
    <ul>
      {% for item in social %}
        <li>
          <a href="{{ item.url }}" target="_blank" rel="noopener noreferrer" aria-label="{{ item.name }}">
            {% include "icons/" + item.icon + ".svg" %}
            <span class="sr-only">{{ item.name }}</span>
          </a>
        </li>
      {% endfor %}
    </ul>
  </nav>
  <div id="views">
    <p class="live-countries">Current visitors: <span class="tinylytics_countries"></span></p>
    <p class="page-views">
      <span class="tinylytics_hits"></span> total views.</p>
  </div>
</footer>
